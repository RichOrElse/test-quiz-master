= form_for @question do |f|

  - if @question.errors.present?
    .alert.alert-danger
      - @question.errors.full_messages.each do |message|
        .message= message

  .form-group
    = f.label :question
    = f.text_field :question, class: 'form-control', placeholder: "Enclose betwen asterix (*) for italic text and between double asterix (**) for bold text", title: "Enclose betwen asterix (*) for italic text and between double asterix (**) for bold text"

  .form-group
    = f.label :answer
    = f.text_field :answer, class: 'form-control'

  = f.submit nil, class: 'btn btn-primary'
