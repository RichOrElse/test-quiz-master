.container
  %h1 Choose a question!
  
  %ul.list-group
    - @questions.each do |question|
      %li.list-group-item
        %span.pull-right
          = link_to "edit", edit_question_path(question), class: 'btn btn-primary btn-xs'
        = link_to MarkdownPresenter.new(question.question, self).to_text, question

  = link_to "Add a new question", new_question_path
